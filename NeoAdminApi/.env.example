# Neo Admin API Configuration - Compatible with neo-commons EnvironmentConfig

# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_VERBOSITY=NORMAL  # Options: QUIET, NORMAL, VERBOSE, DEBUG
LOG_FORMAT=simple  # Options: simple, detailed, json
ENABLE_SQL_LOGGING=false
ENABLE_AUTH_LOGGING=false
ENABLE_DB_LOGGING=false

# Database Configuration (Required)
ADMIN_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/neofast_admin"
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_COMMAND_TIMEOUT=60
DB_ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_DB=0
REDIS_PASSWORD="redis"
REDIS_MAX_CONNECTIONS=50

# Keycloak Configuration (Required)
KEYCLOAK_SERVER_URL="http://localhost:8080"
KEYCLOAK_REALM="platform-admin"
KEYCLOAK_CLIENT_ID="neo-admin-api"
KEYCLOAK_CLIENT_SECRET="your-keycloak-client-secret"
KEYCLOAK_ADMIN="admin"
KEYCLOAK_PASSWORD="admin"

# JWT Configuration removed - using Keycloak-only authentication
# JWT tokens are issued and validated by Keycloak using public key cryptography
# No local JWT secrets needed

# Performance Configuration
PERMISSION_CHECK_TIMEOUT_MS=1
API_REQUEST_TIMEOUT_SECONDS=30

# Feature Flags
FEATURE_CACHING=true
FEATURE_METRICS=true
FEATURE_AUDIT_LOGGING=true

# FastAPI Configuration (AdminAPIConfig)
HOST=0.0.0.0
PORT=8001
WORKERS=1